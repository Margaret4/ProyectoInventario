<div class="container p-4">
    <div class="row">
        {{#each articulos}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <a href="#" target='_blank'>
                        <h3 class="card-title text-uppercase">
                            <!--{{name}}-->
                        </h3>
                        <h4>codigo: {{cod}}</h4>

                        <h4>cantidad: {{cant}}</h4>
                    </a>
                    <a href="articulos/delete/{{cod}}" class="btn btn-danger">Eliminar</a>
                    <a href="articulos/edit/{{cod}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay articulos</p>
                <a href="/articulos/add" class='btn btn-success'>crear articulo</a>
                

            </div>
        </div>
        {{/each}}
    </div>
</div>