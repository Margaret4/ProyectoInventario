<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <!--esto lo centra-->
            <div class="card">
                <div class="card-body">
                    <p>Editar Detalle de Parte Entrada</p>
                    <p>Codigo {{codpe}}</p>
                    <!--tiene que ser el codigo del pe-->
                    <form action="/detalle/edit/{{codpe}}" method="POST"></form>
                    {{#each articulos}}
                    <div class="form-group">
                        <div class="col-3 r3">
                            <p>{{codart}}</p>
                        </div>
                        <div class="col-3 r3">
                            <p>{{cant}}</p>
                        </div>
                        <div class="col-3 r3">
                            <!--<p>{{cant}}</p>-->
                        </div>
                        <div class="col-12">
                            <a href="detalle/{{codpe}}/edit/art/{{cod}}" class="btn btn-secondary">Editar</a>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="text" value="{{cant}}" class="form-control" name="cantidad" placeholder="Cantidad"
                            autofocus>
                    </div>
                    {{else}}

                    {{/each}}
                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                            Guardar
                        </button>
                    </div>
                    </form>

                </div>
            </div>

        </div>

    </div>
</div>