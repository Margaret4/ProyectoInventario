<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto"> <!--esto lo centra-->
            <div class="card">
                <div class="card-body">
                    <h4>Editar proveedor</h4>
                    <form action="/proveedores/edit/{{proveedor.cod}}" method="POST">
                        <div class="form-group">
                            <h4>Nombre</h4>
                            <input type="text" value = "{{proveedor.name}} "  class="form-control" name="name" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <h4>Codigo</h4>
                            <input type="text" value = "{{proveedor.cod}} "  class="form-control" name="codigo" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
