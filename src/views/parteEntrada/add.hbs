<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <!--esto lo centra-->
            <div class="card">
                <div class="card-body">
                    <p>AÃ±adir Parte entrada</p>
                    <form action="/parteEntrada/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="codi" placeholder="cod" autofocus>
                        </div>
                        <div class="form-group">
                            <h6>Proveedor</h6>
                            <select name="codipro">
                            <option value="-1">Seleccionar proveedor</option> 
                            {{#each proveedores}}
                                <option value="{{cod}}">{{name}}</option> 
                                {{else}}
                                <option value="-1">No hay proveedores </option> 
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                             <h6>Almacen</h6>
                            <select name="codialm">
                            <option value="-1">Seleccionar almacen</option> 
                            {{#each almacenes}}
                                <option value="{{cod}}">{{name}}</option> 
                                {{else}}
                                <option value="-1">No hay almacenes </option> 
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>

    </div>
</div>