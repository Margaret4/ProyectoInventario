<div class="container p-4">
    <div class="row">
        {{#each parts}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <a href="" target='_blank'>
                        <h3 class="card-title text-uppercase">
                            codigo:  {{cod}}
                        </h3>
                        <!--<h4>{{fecha}}</h4>-->
                        <h4>almacen:  {{codalm}}</h4>
                        <h4>proveedor:  {{codpro}}</h4>
                        <!--<h4>monto:  {{articulo.monto}}</h4>-->

                    </a>
                    <a href="parteEntrada/delete/{{cod}}" class="btn btn-danger">Eliminar</a>
                    <a href="parteEntrada/edit/{{cod}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay articulos</p>
                <a href="/articulos/add" class='btn btn-success'>crear articulo</a>
                <img src="/img/pinguino.jpg" width="300" height="300">
                <p>o muere</p>

            </div>
        </div>
        {{/each}}

    </div>
</div>