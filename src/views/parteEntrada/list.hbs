<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <h3>Partes de Entrada</h3>
        </div>
    </div>
    <div class="row">
        {{#each parts}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <a href="" target='_blank'>
                        <h3 class="card-title text-uppercase">
                            codigo:  {{cod}}
                        </h3>
                        <!--<h4>{{fecha}}</h4>-->
                        <h4>almacen:  {{codalm}}</h4>
                        <h4>proveedor:  {{codpro}}</h4>
                        <!--<h4>monto:  {{articulo.monto}}</h4>-->

                    </a>
                    <a href="/parteEntrada/delete/{{cod}}" class="btn btn-danger">Eliminar</a>
                    <!--Nota si no pongo / antes de la direccion se repite el parteEntrada, tiene que ver con que 
                    le dije que le ponga el prefijo parteEntrada en router-->
                    <a href="/parteEntrada/edit/{{cod}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay partes de entrada</p>
                <a href="/parteEntrada/add" class='btn btn-success'>Crear Parte Entrada</a>


            </div>
        </div>
        {{/each}}

    </div>
</div>