<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <!--esto lo centra-->
            <div class="card">
                <div class="card-body">
                    <p>Canciones</p>
                    <form action="/songs/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Name" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="Url" autofocus>
                        </div>

                        <div class="form-group">
                            <input type="album" class="form-control" name="album" placeholder="Album" autofocus>
                        </div>

                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <textarea name="letra" rows="5" class="form-control" placeholder="Letra"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>