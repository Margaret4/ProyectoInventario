<div class="container p-4 pre-scrollable" style="max-height: 90vh ;max-width: 100vw ; ">
    <div class="row">
        <div class="col-8">
            <h1>Detalle Parte Entrada {{codpe}}</h1>
        </div>
        <div class="form-group row">
            <div class="col">
                <a href="/detalle/add/{{codpe}}" class='btn btn-success'>AÃ±adir articulo</a>
            </div>
        </div>

    </div>
    <div class="row">
        {{#each articulos}} <!--"articulos" porque son los articulos comprados en un parte entrada  -->
        <!--En si estos tienen a codart,codpe, y cant-->
        <div class="col-md-4">
            <div class="card text-center form-group">
                <div class="card-body">
                    <a href="#" target='_blank'>
                        <h3 class="card-title text-uppercase">
                            <!--{{name}}-->
                        </h3>
                        <h4>codigo:{{codart}}</h4>

                        <h4>cantidad: {{cant}}</h4>
                    </a>
                    <a href="/detalle/delete/{{codpe}}/{{codart}}" class="btn btn-danger">Eliminar</a>
                    <a href="/detalle/edit/{{codpe}}/{{codart}}" class="btn btn-secondary">Editar</a>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay articulos</p>
            </div>
        </div>
        {{/each}}

    </div>
</div>