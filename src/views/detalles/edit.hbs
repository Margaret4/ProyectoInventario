<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <!--esto lo centra-->
            <div class="card">
                <div class="card-body">
                    <p>Editar Detalle de Parte Entrada</p>
                    <div class="row">
                        <form action="/detalle/{{codpe}}">
                            <button class="form-group btn btn-success btn-block">
                                Atras 
                            </button>
                        </form>
                    </div>
                    <!--tiene que ser el codigo del pe-->
                    <form action="/detalle/edit/{{articulo.codpe}}/{{articulo.codart}}" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{articulo.codart}}" class="form-control" name="newcodart" placeholder="codigo articulo"
                            autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" value="{{articulo.cant}}" class="form-control" name="canti" placeholder="Cantidad"
                            autofocus>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                            Guardar
                        </button>
                    </div>
                    </form>

                </div>
            </div>

        </div>

    </div>
</div>