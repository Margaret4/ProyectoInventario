<div class="container p-4">
    <div class="row">
        {{#each singers}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target='_blank'>
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <a href="links/delete/{{id}}" class="btn btn-danger">Delete Link</a>
                    <a href="links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay cantantes</p>
                <a href="/links/add" class='btn btn-success'>Create one</a>
                <img src="/img/pinguino.jpg" width="300" height="300">
                <p>o muere</p>

            </div>
        </div>
        {{/each}}
    </div>
</div>